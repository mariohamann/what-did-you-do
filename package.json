{
    "private": true,
    "type": "module",
    "scripts": {
        "dev": "vite",
        "build": "vue-tsc && vite build",
        "lint": "npx prettier --write . && php ./vendor/bin/pint",
        "generate-types": "php artisan typescript:transform",
        "// prepare": "We don't want to start the prepare script for husky when we don't install the dev depencies.",
        "prepare": "node -e \"try { require('husky').install() } catch (e) {if (e.code !== 'MODULE_NOT_FOUND') throw e}\""
    },
    "devDependencies": {
        "@inertiajs/vue3": "^1.0.7",
        "@tailwindcss/forms": "^0.5.3",
        "@types/ziggy-js": "^1.3.2",
        "@vitejs/plugin-vue": "^4.2.3",
        "autoprefixer": "^10.4.14",
        "axios": "^1.4.0",
        "husky": "^8.0.3",
        "laravel-vite-plugin": "^0.7.7",
        "lint-staged": "^13.2.2",
        "postcss": "^8.4.23",
        "prettier": "^2.8.8",
        "prettier-plugin-tailwindcss": "^0.2.8",
        "tailwindcss": "^3.3.2",
        "typescript": "^5.0.4",
        "vite": "^4.3.8",
        "vite-plugin-watch-and-run": "^1.1.3",
        "vue": "^3.3.4",
        "vue-tsc": "^1.6.5"
    },
    "lint-staged": {
        "*": "pnpm lint"
    },
    "dependencies": {
        "@headlessui/vue": "^1.7.13",
        "@heroicons/vue": "1.0.6"
    }
}
